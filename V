-- Главное окно
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 300, 0, 400)
MainFrame.Position = UDim2.new(0, 20, 1, -420)
MainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
MainFrame.BackgroundTransparency = 0.3

-- Заголовок с градиентом
local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundTransparency = 1
Title.Text = "Virta Z"
Title.Font = Enum.Font.Fantasy
Title.TextSize = 24
Title.TextColor3 = Color3.fromRGB(255, 255, 255)

local UIGradient = Instance.new("UIGradient", Title)
UIGradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(128, 0, 0)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 0, 0))
}
UIGradient.Rotation = 0

-- Скроллинг
local Scroll = Instance.new("ScrollingFrame", MainFrame)
Scroll.Size = UDim2.new(1, 0, 1, -40)
Scroll.Position = UDim2.new(0, 0, 0, 40)
Scroll.CanvasSize = UDim2.new(0, 0, 0, 600)
Scroll.ScrollBarThickness = 6
Scroll.ScrollBarImageColor3 = Color3.fromRGB(100, 0, 0)

-- Вкладка "Телепорт"
local TeleportFrame = Instance.new("Frame", Scroll)
TeleportFrame.Size = UDim2.new(1, -10, 0, 120)
TeleportFrame.Position = UDim2.new(0, 5, 0, 50)
TeleportFrame.BackgroundTransparency = 0.4
TeleportFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)

local TeleportLabel = Instance.new("TextLabel", TeleportFrame)
TeleportLabel.Size = UDim2.new(1, 0, 0, 30)
TeleportLabel.BackgroundTransparency = 1
TeleportLabel.Text = "Телепорт"
TeleportLabel.Font = Enum.Font.Fantasy
TeleportLabel.TextSize = 20
TeleportLabel.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Ввод ника
local NameBox = Instance.new("TextBox", TeleportFrame)
NameBox.Size = UDim2.new(0.7, -5, 0, 25)
NameBox.Position = UDim2.new(0, 5, 0, 35)
NameBox.PlaceholderText = "Введите ник игрока"
NameBox.BackgroundTransparency = 0.2
NameBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
NameBox.TextColor3 = Color3.new(1, 1, 1)

local NameButton = Instance.new("TextButton", TeleportFrame)
NameButton.Size = UDim2.new(0.3, -10, 0, 25)
NameButton.Position = UDim2.new(0.7, 5, 0, 35)
NameButton.Text = "TP"
NameButton.Font = Enum.Font.Fantasy
NameButton.TextColor3 = Color3.new(1,1,1)
NameButton.BackgroundColor3 = Color3.fromRGB(0, 100, 200)

NameButton.MouseButton1Click:Connect(function()
	local name = NameBox.Text:lower()
	for _, plr in pairs(game.Players:GetPlayers()) do
		if plr.Name:lower():find(name) then
			local char = game.Players.LocalPlayer.Character
			if char and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
				char:MoveTo(plr.Character.HumanoidRootPart.Position + Vector3.new(0,2,0))
			end
		end
	end
end)

-- Ввод координат
local CoordBox = Instance.new("TextBox", TeleportFrame)
CoordBox.Size = UDim2.new(0.7, -5, 0, 25)
CoordBox.Position = UDim2.new(0, 5, 0, 70)
CoordBox.PlaceholderText = "Введите X,Y,Z"
CoordBox.BackgroundTransparency = 0.2
CoordBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
CoordBox.TextColor3 = Color3.new(1, 1, 1)

local CoordButton = Instance.new("TextButton", TeleportFrame)
CoordButton.Size = UDim2.new(0.3, -10, 0, 25)
CoordButton.Position = UDim2.new(0.7, 5, 0, 70)
CoordButton.Text = "TP"
CoordButton.Font = Enum.Font.Fantasy
CoordButton.TextColor3 = Color3.new(1,1,1)
CoordButton.BackgroundColor3 = Color3.fromRGB(0, 100, 200)

CoordButton.MouseButton1Click:Connect(function()
	local x,y,z = CoordBox.Text:match("([^,]+),([^,]+),([^,]+)")
	if x and y and z then
		local pos = Vector3.new(tonumber(x), tonumber(y), tonumber(z))
		local char = game.Players.LocalPlayer.Character
		if char then char:MoveTo(pos) end
	end
end)

